{
  "manifest_version": 2,
  "name": "Android Resource Navigator for GitHub",
  "description": "Enhanced resource navigation for GitHub hosted Android projects",
  "version": "0.1.0",
  "background": { "scripts": ["background.js"] },
  "options_page": "options.html",
  "permissions": [
    "tabs", 
    "http://*/*",
    "storage"
  ],
  "icons": {
    "128": "images/117.png"
  },
  "browser_action": {
    "default_title": "Android Framework Resources",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/19.png",
      "38": "images/38.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*res/values*",
        "*://github.com/*res/drawable*",
        "*://github.com/*res/layout*",
        "*://github.com/*res/anim*",
        "*://github.com/*res/menu",
        "*://github.com/*res/xml*"
      ],
      "js": [
        "page-find-injected.js",
        "res-linkify.js"
      ]
    }
  ],
  "web_accessible_resources": ["resolver-injected.js", "page-find-injected.js"]
}
